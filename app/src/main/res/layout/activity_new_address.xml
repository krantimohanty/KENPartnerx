<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_address__comp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kencloud.partner.user.NewAddressActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:contentInsetLeft="0dp"
        app:elevation="6dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Address"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:id="@+id/toolbar_title" />

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Geo Location"
                    android:id="@+id/geolocation"
                    android:layout_marginTop="3dp"/>
                <!--<android.support.v7.widget.AppCompatEditText-->
                <!--android:id="@+id/title"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp"-->
                <!--android:hint="Address Title"-->
                <!--android:background="@drawable/edt_bg_selector"-->
                <!--android:layout_marginTop="7dp"-->
                <!--android:drawablePadding="16dp"-->
                <!--android:fontFamily="san-serif"-->
                <!--android:inputType="text"-->
                <!--android:textColorHint="@color/grey"-->
                <!--android:singleLine="true"-->
                <!--android:textSize="@dimen/text_head"/>-->
                <!--<android.support.v7.widget.AppCompatSpinner-->

                <!--android:id="@+id/address_type"-->
                <!--style="@style/Widget.AppCompat.Spinner.Underlined"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="16dp"-->
                <!--android:entries="@array/location_type"-->
                <!--android:paddingBottom="10dp"-->
                <!--android:paddingTop="10dp" />-->

                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/address_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address Type"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/medical"
                    android:drawablePadding="9dp"
                    app:met_floatingLabel="normal"
                    android:textColorHint="@color/grey"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:fontFamily="san-serif"
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    />
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/address1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Address 1"
                    android:background="@drawable/edt_bg_selector"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="san-serif"
                    android:inputType="text"
                    android:textColorHint="@color/grey"
                    android:singleLine="true"
                    android:textSize="@dimen/text_large_head"/>
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/address2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Address 2"
                    android:background="@drawable/edt_bg_selector"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="san-serif"
                    android:inputType="text"
                    android:textColorHint="@color/grey"
                    android:singleLine="true"
                    android:textSize="@dimen/text_large_head"/>
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/landmark"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Landmark"
                    android:background="@drawable/edt_bg_selector"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="san-serif"
                    android:inputType="text"
                    android:textColorHint="@color/grey"
                    android:singleLine="true"
                    android:textSize="@dimen/text_large_head"/>
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="City"
                    android:background="@drawable/edt_bg_selector"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="san-serif"
                    android:inputType="text"
                    android:textColorHint="@color/grey"
                    android:singleLine="true"
                    android:textSize="@dimen/text_large_head"/>
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="State"
                    android:background="@drawable/edt_bg_selector"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="san-serif"
                    android:inputType="text"
                    android:textColorHint="@color/grey"
                    android:singleLine="true"
                    android:textSize="@dimen/text_large_head"/>
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Country"
                    android:background="@drawable/edt_bg_selector"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="san-serif"
                    android:inputType="text"
                    android:textColorHint="@color/grey"
                    android:singleLine="true"
                    android:textSize="@dimen/text_large_head"/>
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/zip"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="ZIP"
                    android:background="@drawable/edt_bg_selector"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="san-serif"
                    android:inputType="number"
                    android:textColorHint="@color/grey"
                    android:singleLine="true"
                    android:textSize="@dimen/text_large_head"/>


                <!--<android.support.v7.widget.AppCompatEditText-->
                <!--android:id="@+id/geolocation"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp"-->
                <!--android:hint="Geo Location"-->
                <!--android:background="@drawable/edt_bg_selector"-->
                <!--android:layout_marginTop="7dp"-->
                <!--android:drawablePadding="16dp"-->
                <!--android:fontFamily="san-serif"-->
                <!--android:inputType="text"-->
                <!--android:textColorHint="@color/grey"-->
                <!--android:singleLine="true"-->
                <!--android:textSize="@dimen/text_head"/>-->
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/address_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:fontFamily="san-serif"
                    android:layout_marginTop="10dp"
                    android:text="Select if this is primary address"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_content" />
                <android.support.v7.widget.AppCompatButton
                    android:layout_marginTop="50dp"
                    android:background="@drawable/mybutton"
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:layout_height="wrap_content"
                    android:text="Save"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
