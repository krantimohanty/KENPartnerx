<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/row_item_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="san-serif"
                android:padding="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="HeadName"
                android:textSize="@dimen/text_large_head"
                android:textStyle="bold" />

            <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:id="@+id/row_item_date"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:fontFamily="san-serif"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:paddingRight="8dp"-->
            <!--android:text="Date"-->
            <!--android:textSize="@dimen/text_small"-->
            <!--android:textStyle="normal" />-->

            <!-- <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="150dp"
                 android:background="@color/grey">-->

            <ImageView
                android:src="@drawable/banner04"
                android:id="@+id/row_item_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />
            <!--</RelativeLayout>-->
            <!--android:background="@drawable/babylonialogo"-->

            <android.support.v7.widget.AppCompatTextView
            android:id="@+id/row_item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="san-serif"
            android:lineSpacingExtra="1dp"
            android:text="@string/press_release1"
            android:padding="5dp"
            android:textSize="@dimen/text_content"
            android:textStyle="normal" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/row_item_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="san-serif"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/row_item_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="san-serif"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/row_item_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="san-serif"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">

                    <com.joanzapata.iconify.widget.IconButton
                        android:id="@+id/like"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="san-serif"
                        android:gravity="center"
                        android:text="{ic-like}"
                        android:textSize="16sp" />

                    <com.joanzapata.iconify.widget.IconButton
                        android:id="@+id/share"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="{ic-share}"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>